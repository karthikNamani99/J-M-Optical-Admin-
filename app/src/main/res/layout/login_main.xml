<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_"
    android:orientation="vertical">

    <View
        android:id="@+id/ocacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.4"
        android:background="@android:color/background_light"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_106"
            android:layout_height="@dimen/dimen_106"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_96"
            android:src="@drawable/optical_logo"
            app:civ_border_color="#0094CF"
            app:civ_border_width="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18"
                android:gravity="center"
                android:text="Admin Login"
                android:textColor="#756161"
                android:textSize="@dimen/dimen_24"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_admin_emailid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@drawable/background_edittext"
                android:hint="Enter Admin Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dimen_18"
                android:textColor="#000000"
                android:textColorHint="#80000000" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@drawable/background_edittext"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimen_18"
                android:textColor="#000000"
                android:textColorHint="#80000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/background_button"
                android:text="Login"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/change_mobile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="end"
                android:text="Forgot Password?"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/dimen_10"
                android:textSize="@dimen/dimen_18"

                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>